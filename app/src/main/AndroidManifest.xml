<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="im.akari.gittracer">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="im.akari.gittracer.view.activity.teacher.TeacherMainActivity"
            android:label="@string/app_name" />

        <activity
            android:name="im.akari.gittracer.view.activity.student.StudentMainActivity"
            android:label="@string/app_name" />

        <activity android:name="im.akari.gittracer.view.activity.teacher.StudentListActivity" />

        <activity
            android:name="im.akari.gittracer.view.activity.common.PageActivity"
            android:label="@string/title_activity_assignment"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="im.akari.gittracer.view.activity.common.QuestionListActivity"
            android:label="@string/title_activity_questionList" />

        <activity
            android:name="im.akari.gittracer.view.activity.common.QuestionScoreActivity"
            android:label="@string/title_activity_questionScore" />

        <activity
            android:name="im.akari.gittracer.view.activity.common.ReadMeActivity"
            android:label="@string/title_activity_readme"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="im.akari.gittracer.view.activity.common.QuestionAnalysisActivity"
            android:label="@string/title_activity_questionAnalysis" />

        <activity android:name="im.akari.gittracer.view.activity.common.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="im.akari.gittracer.view.activity.common.RegisterActivity"
            android:theme="@style/Translucent" />

    </application>

</manifest>