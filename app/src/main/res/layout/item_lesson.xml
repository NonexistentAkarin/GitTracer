<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/assignment_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip">

        <TextView
            android:id="@+id/assignment_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作业1"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/assignment_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/assignment_title_text"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/assignment_title_text"
            android:layout_toEndOf="@+id/assignment_title_text"
            android:gravity="center_vertical|end"
            android:text="正在分析结果"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="#f28c36"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assignment_title_text"
            android:text="作业1"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

        <TextView
            android:id="@+id/start_time_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_marginTop="10dp"
            android:text="开始时间"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/assignment_start_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_time_icon"
            android:text="1970-01-01"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/end_time_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/start_time_icon"
            android:layout_below="@+id/assignment_start_text"
            android:layout_marginStart="115dp"
            android:layout_toEndOf="@+id/start_time_icon"
            android:text="结束时间"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/assignment_end_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/end_time_icon"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/end_time_icon"
            android:text="1970-01-01"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/colorPrimaryDark" />
    </RelativeLayout>
</android.support.v7.widget.CardView>